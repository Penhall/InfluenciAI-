<Window
    x:Class="InfluenciAI.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:InfluenciAI.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:InfluenciAI.Desktop.Views"
    Title="InfluenciAI"
    Width="1000"
    Height="600"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    >
    <DockPanel Background="{StaticResource PrimaryBackgroundBrush}">
        <DockPanel Margin="8" DockPanel.Dock="Top">
            <TextBlock
                VerticalAlignment="Center"
                Foreground="{StaticResource SecondaryTextBrush}"
                Text="{Binding CurrentUserLabel}"
                />
            <StackPanel
                HorizontalAlignment="Right"
                DockPanel.Dock="Right"
                Orientation="Horizontal"
                >
                <Button
                    Width="100"
                    Margin="4,0"
                    Click="Logout_Click"
                    Content="Logout"
                    />
                <Button
                    Width="130"
                    Margin="4,0"
                    Click="LogoutAll_Click"
                    Content="Logout (Todos)"
                    />
            </StackPanel>
        </DockPanel>
        <TabControl>
            <TabItem Header="Tenants">
                <views:TenantsView />
            </TabItem>
            <TabItem Header="Usuários">
                <views:UsersView />
            </TabItem>
            <TabItem Header="Conexões Sociais">
                <views:SocialConnectionView />
            </TabItem>
            <TabItem Header="Publicar Conteúdo">
                <views:ContentEditorView />
            </TabItem>
            <TabItem Header="Métricas">
                <views:MetricsView />
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
