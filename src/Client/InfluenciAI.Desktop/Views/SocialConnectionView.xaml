<UserControl x:Class="InfluenciAI.Desktop.Views.SocialConnectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:InfluenciAI.Desktop.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:SocialConnectionViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Conexões de Redes Sociais" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Conectar Twitter"
                    Command="{Binding ConnectTwitterCommand}"
                    IsEnabled="{Binding Busy, Converter={StaticResource InverseBoolConverter}}"
                    Padding="15,8" Margin="0,0,10,0" FontSize="14"/>
            <Button Content="Atualizar"
                    Command="{Binding RefreshCommand}"
                    IsEnabled="{Binding Busy, Converter={StaticResource InverseBoolConverter}}"
                    Padding="15,8" FontSize="14"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock Grid.Row="2" Text="{Binding Status}" Margin="0,0,0,10" FontStyle="Italic" Foreground="Gray"/>

        <!-- Connected Profiles List -->
        <Border Grid.Row="3" BorderBrush="LightGray" BorderThickness="1" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ConnectedProfiles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Profile Image Placeholder -->
                                    <Border Grid.Column="0" Width="50" Height="50" Background="LightBlue" CornerRadius="25" Margin="0,0,10,0">
                                        <TextBlock Text="{Binding Username, Converter={StaticResource FirstCharConverter}}"
                                                   FontSize="20" FontWeight="Bold"
                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Profile Info -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="16"/>
                                        <TextBlock Text="{Binding Username, StringFormat='@{0}'}" Foreground="Gray"/>
                                        <TextBlock Text="{Binding Network}" FontSize="12" Foreground="DarkBlue"/>
                                        <TextBlock Text="{Binding ConnectedAt, StringFormat='Conectado em: {0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="11" Foreground="Gray"/>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="2" Background="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"
                                            Padding="10,5" CornerRadius="3">
                                        <TextBlock Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}"
                                                   Foreground="White" FontWeight="Bold"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Instructions -->
        <TextBlock Grid.Row="4" Margin="0,10,0,0" TextWrapping="Wrap" Foreground="Gray" FontSize="12">
            <Run Text="Instruções:"/>
            <LineBreak/>
            <Run Text="1. Clique em 'Conectar Twitter' para abrir o navegador"/>
            <LineBreak/>
            <Run Text="2. Autorize o aplicativo no Twitter"/>
            <LineBreak/>
            <Run Text="3. Aguarde o redirecionamento e clique em 'Atualizar'"/>
        </TextBlock>
    </Grid>
</UserControl>
